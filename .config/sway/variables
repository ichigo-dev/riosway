# hot key
set $mod Mod4
set $alt Mod1
set $left h
set $right l
set $up k
set $down j

# tools
set $term alacritty
set $browser firefox
set $filemanager thunar
set $editor nvim
set $menu wofi --insensitive --show drun | xargs swaymsg exec --
set $notice mako
set $screenshot grim -g "$(slurp)" - | swappy -f -
set $lock swaylock
set $exit waylogout
